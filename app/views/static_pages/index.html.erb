<%= render 'layouts/header' %>

<div class="content">
  <div class="col-md-6 eventColumn">
    <span id="today">
      <%= @left_name %>
    </span>

    <div class="eventList">
     
      <% for e in @events_today %>
      <li>
       <div class="bigEvent" style="<%= big_event_style(e) %>">

        <div class="events"><%= e.title %></div>
        <div class="dateloc">
          <span class="date"><!-- <span class="eventColon">Time:</span> -->
          <%= e.start_at.strftime('%I:%M %P') %> &#8212; <%= e.end_at.strftime('%I:%M %P') %>

        </span>
        <div class="loc" style="<%= 'float: right;'  if e.location.length <= 20 %>">
          <!-- <span class="eventColon">Location:</span> -->
          <%= e.location  %></span> 
        </div>

        <% if not e.description.blank? %>
        <div class="desc ellipsis">
          <span class="eventColon">Description:</span>
          <%= e.description %>
        </span>
      </div>
      <% end %>
    </div>
  </li>
  <% end %>
</div>
</div>

<div class="col-md-6 eventColumn" >

  <span id="upcoming">
    Upcoming
  </span>

  <div class="eventList">

    <% for e in @events_upcoming %>
    <li>
      <div class="bigEvent" style="<%= big_event_style(e) %>">


        <div class="events"><%= e.title %></div>
        <div class="dateloc">
          <span class="date"><!-- <span class="eventColon">Time:</span> -->
          <%= e.start_at.strftime('%a %b %e | %I:%M %P') %> &#8212;
          <%= e.end_at.strftime('%I:%M %P') %>

        </span>
        <div class="loc" style="<%= 'float: right;'  if e.location.length <= 20 %>">
          <!-- <span class="eventColon">Location:</span> -->
          <%= e.location  %></span> 
        </div>

        <% if not e.description.blank? %>
        <div class="desc ellipsis">
          <span class="eventColon">Description:</span>
          <%= e.description %>
        </span>
      </div>
      <% end %>
    </div>
  </li>
  <% end %>

  <%= will_paginate @events_upcoming, :renderer => WillPaginate::ActionView::LinkRenderer %>

</div> 